<Window x:Class="Homework10._8.UserCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework10._8"
        mc:Ignorable="d"
        Title="Проверка пользователя" Height="160" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button_ConsLogin" Content="Консультант" HorizontalAlignment="Center" Margin="20,10" VerticalAlignment="Bottom" Height="30" Width="150" Click="Button_ConsLogin_Click"/>
        <Button x:Name="Button_ManagLogin" Content="Менеджер" HorizontalAlignment="Center" Margin="20,10" VerticalAlignment="Top" Height="30" Width="150" Grid.Row="1" Click="Button_ManagLogin_Click"/>

    </Grid>
</Window>
